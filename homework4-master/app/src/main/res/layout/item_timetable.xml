<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/train_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/route_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/train_id"
        android:layout_below="@id/train_id"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/departure_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/train_id"
        android:layout_below="@id/route_description"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/arrival_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/train_id"
        android:layout_below="@id/departure_info"
        android:textSize="16sp"/>

</RelativeLayout>